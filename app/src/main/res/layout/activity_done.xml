<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoneActivity">
    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="244dp"
        android:layout_height="43dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/kotak"
        android:gravity="center"
        android:shadowColor="#514F4F"
        android:text="EDIT QUEST"
        android:textColor="#009688"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="351dp"
        android:layout_height="344dp"
        android:background="@drawable/layout1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewResult"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/buttonDelete"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="102dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:background="@drawable/kotakno"
            android:text="Delete"
            android:textColor="#E91E63"
            android:textSize="16sp"
            android:theme="@style/buttonstyle3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.811"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonBackDialog2"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="102dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp"
            android:background="@drawable/kotakno"
            android:text="Back"
            android:textColor="#E91E63"
            android:textSize="16sp"
            android:theme="@style/buttonstyle3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.19"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonSubmitDialogDone"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="102dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp"
            android:background="@drawable/kotakyes"
            android:text="Submit"
            android:textColor="#4CAF50"
            android:textSize="16sp"
            android:theme="@style/buttonstyle3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.813"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonDone"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="102dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:background="@drawable/kotakyes"
            android:text="Done"
            android:textColor="#4CAF50"
            android:textSize="16sp"
            android:theme="@style/buttonstyle3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.188"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editTextQuest"
            android:layout_width="323dp"
            android:layout_height="48dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/layout2"
            android:ems="10"
            android:hint="Your Quest"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHighlight="#F8F4F4"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="340dp"
            android:layout_height="49dp"
            android:background="@drawable/layout2"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.545"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextQuest"
            app:layout_constraintVertical_bias="0.153">

            <CheckBox
                android:id="@+id/checkBoxDuelist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="#009688"
                android:text="Duelist"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/checkBoxInitiator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="#009688"
                android:text="Initiator" />

            <CheckBox
                android:id="@+id/checkBoxController"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="#009688"
                android:text="Controller" />

            <CheckBox
                android:id="@+id/checkBoxSentinel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="#009688"
                android:text="Sentinels" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>